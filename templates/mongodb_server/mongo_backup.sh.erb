#!/bin/bash

BACKUP_DIR=<%= scope.lookupvar('roles::mongodb_server::backup::backup_dir') %>/mongodb
DATE=`/bin/date +%Y%m%d%H%M`

cd $BACKUP_DIR
/usr/bin/mongodump
mv dump $DATE
/bin/tar cvfj ${DATE}.tar.bz2 $DATE
/bin/rm -fR $DATE

/usr/bin/find <%= scope.lookupvar('roles::mongodb_server::backup::backup_dir') -%> -maxdepth 1 -mindepth 1 -type f -mtime +<%= scope.lookupvar('roles::mongodb_server::backup::backup_retention') -%> -exec rm -fR {} \;
